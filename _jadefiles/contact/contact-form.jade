  .form-fill-out
    #mc_form
      form(method='POST', action='https://formspree.io/tetrahedralprism@hotmail.com')
        .form-display
          .row-1
            .mc-field-group.group-name
              input(type='text', name='name')
              label Your Name... 
            .mc-field-group.group-subject
              input(type='text', name='subject')
              label Your Subject... 
            .mc-field-group.group-email
              input(type='email', name='_replyto')
              label Your Email... 
          .row-2
            .mc-field-group.group-message
              input(type='text', name='subject')
              label Your Message... 
          .group-submit
            input.submit-button(type='submit', value='Submit')
  
  
