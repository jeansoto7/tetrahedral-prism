mixin img(image, title)
  img(src="{{site.baseurl}}/assets/img/shop/products/#{image}", title="#{title}", alt="#{title}").other-img

mixin main(image, title)
  img(src="{{site.baseurl}}/assets/img/shop/products/#{image}", title="#{title}", alt="#{title}")

mixin tricolor(classNames, href, title, className)
  a.triangles(class=classNames)(class=className)(href='{{site.baseurl}}/#{href}')(title='#{title}')
    .tricolor-bottom
    .tricolor-top
    .tricolor-active

mixin triback(href, image, title, className)
  .triback(class=className)
    a.triimg(href='/#{href}')
      img(src="{{site.baseurl}}/assets/img/shop/colors/#{image}", title="#{title}", alt="#{title}")
    a.tricolor-bottom(href='{{site.baseurl}}/#{href}')
    a.tricolor-active(href='{{site.baseurl}}/#{href}')

mixin list-drop(url, info, className)
  li(class=className): a(href="{{site.baseurl}}/#{url}") #{info}

