mixin shopslider(href, iconimg, title, buttoninfo)
  ul.shop-slides
    li.shop-slide
      a(href="{{site.baseurl}}/#{href}")
        .shop-image-anchors
          img(src="{{site.baseurl}}/assets/img/home/shop-carousel/#{iconimg}", title="#{title}", alt="#{title}").imgshop.imgzoom
      .carousel-shop-button
        h3 #{title}
        a(href="{{site.baseurl}}/#{href}")
          button.info-shop-button #{buttoninfo}

.product-carousel.the-heading.container-shadow

  .social-heading
    h1 Around the Bane
    hr.thehr

  .product-slider
    .triangle-toggle
      .triangle-previous
        .arrow-shop-carouselleft
      .triangle-next
        .arrow-shop-carouselright

    .shop-slider.content-height.content-height.container-shadow
