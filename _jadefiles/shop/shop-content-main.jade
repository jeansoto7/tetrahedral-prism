mixin icon(href, iconimg, iconinfo, className)
  .icon-box: a(href="/#{href}")
    img(src="/assets/img/shop/icons/#{iconimg}", title="#{iconinfo}", alt="#{iconinfo}")(class=className)
    p #{iconinfo}
