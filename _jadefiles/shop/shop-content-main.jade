mixin shop-products(href, image, title, price)
  figure.product-box
    a(href="/#{href}")
      .product-image
        img.lazyload(data-src="/assets/img/shop/products/#{image}", title="#{title}", alt="#{title}")
    .product-caption
      h3.ellipsis-text: a(href="/#{href}") #{title}
      p #{price}


